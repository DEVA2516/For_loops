let num = 5;
let str =' ';
let l = num * 2;

for(let i=1;i<=num;i++){

    for(let j= num-i;j>=0;j--)
        str += ' ';

    for(let k=1;k<=2*i-1;k++){
        str += '*' + " ";
        //console.log(k);
    }
        if(k==num-1){
            i--;
        }


    console.log(str);
    str = '';
}